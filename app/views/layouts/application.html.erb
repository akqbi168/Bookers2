<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="slidemenu">
      <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" style="background-color:#000000">
        <div class="navbar-header navbar-left">
          <a class="navbar-brand" style="color:#FFF">Bookers</a>
        </div>

        <div class="slidemenu collapse navbar-collapse" id="navbarExample" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class=""><%= link_to " Home", "#", class: "glyphicon glyphicon-home" %></li>
              <li class=""><%= link_to " Users", "#", class: "glyphicon glyphicon-user" %></li>
              <li class=""><%= link_to " Books", "#", class: "glyphicon glyphicon-book" %></li>
              <li class=""><%= link_to " logout", destroy_user_session_path, class: "glyphicon glyphicon-log-in" %></li>

            <% else %>
              <li class=""><%= link_to " Home", "#", class: "glyphicon glyphicon-home" %></li>
              <li class=""><%= link_to " About", "#", class: "glyphicon glyphicon-link" %></li>
              <li class=""><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
              <li class=""><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>

            <% end %>
          </ul>
        </div>
      </nav>
    </div>

    <div style="margin-top:64px">
      <%= yield %>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-offset-8 col-xs-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>